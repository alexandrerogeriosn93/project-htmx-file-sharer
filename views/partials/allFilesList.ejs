<div class="mt-4">
  <h1 class="text-center text-2xl font-bold">Seus arqvuios</h1>
  <% if(files && files.length > 0) { %>
  <ul class="divide-y divide-gray-200">
    <% files.forEach(file => { %>
    <li class="py-4">
      <div class="flex items-center justify-between">
        <span class="text-gray-700 font-bold"><%= file.name %></span>
        <div>
          <a
            href="/<%= file.path%>"
            download="<%= file.name%>"
            class="mr-2 rounded bg-blue-500 px-3 py-1 font-bold text-white hover:bg-blue-700"
          >
            Download
          </a>
        </div>
      </div>
      <p class="text-sm text-gray-600 mt-2 italic"><%= file.User.name %></p>
      <p class="text-sm text-gray-600 mt-2"><%= file.description %></p>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p class="text-gray-500">Nenhum arquivo encontrado!</p>
  <% } %>
</div>
