<div class="mt-4">
  <h1 class="text-center text-2xl font-bold">Seus arqvuios</h1>
  <% if(files && files.length > 0) { %>
  <ul class="divide-y divide-gray-200">
    <% files.forEach(file => { %>
    <li class="py-4">
        <div class="flex justify-between items-center">
            <span class="text-gray-700"><%= file.name %></span>
            <div>
                <a 
                  href="/<%= file.path%>"
                  download="<%= file.name%>"
                  class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded mr-2"
                >
                  Download
                </a>
                <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-3 rounded mr-2">Deletar</button>
            </div>
        </div>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p class="text-gray-500">Nenhum arquivo encontrado!</p>
  <% } %>
</div>
